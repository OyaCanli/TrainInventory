<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColorPrimary">@color/textColorLight</item>
        <item name="android:textColorTertiary">@color/textColorLight</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.TrainInventory.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">@color/textColorLight</item>
        <item name="hintTextColor">@color/textColorLight</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">@dimen/edittext_box_width</item>
    </style>

    <style name="yellow_descriptive_text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/ic_tick</item>
        <item name="android:paddingStart">@dimen/half_padding</item>
        <item name="android:paddingLeft">@dimen/half_padding</item>
        <item name="android:paddingEnd">@dimen/half_padding</item>
        <item name="android:paddingRight">@dimen/half_padding</item>
        <item name="android:layout_height">@dimen/save_button_size</item>
        <item name="android:layout_width">@dimen/save_button_size</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="details_plain_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
    </style>

    <style name="alert_dialog_style" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/window_background</item>
        <item name="android:textColorPrimary">@color/textColorLight</item>
        <item name="buttonBarPositiveButtonStyle">@style/alert_dialog_action_btn_Style</item>
        <item name="buttonBarNegativeButtonStyle">@style/alert_dialog_action_btn_Style</item>
    </style>

    <style name="alert_dialog_action_btn_Style">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="name_style">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="active_menu_item">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="inactive_menu_item">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
