<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group android:name="group"/>
            <path
                android:name="accent"
                android:pathData="M 12 1 L 12 23 M 23 12 L 1 12"
                android:strokeColor="#ffffff"
                android:strokeWidth="3"/>
        </vector>
    </aapt:attr>
    <target android:name="accent">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="3000"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:repeatCount="0">

                <propertyValuesHolder
                    android:propertyName="strokeColor"
                    android:valueType="colorType">
                    <keyframe
                        android:fraction="0.0"
                        android:value="#ffffff" />

                    <keyframe
                        android:fraction="0.1"
                        android:value="#000000" />

                    <keyframe
                        android:fraction="0.2"
                        android:value="@color/colorAccent" />

                    <keyframe
                        android:fraction="0.4"
                        android:value="#000000" />

                    <keyframe
                        android:fraction="0.5"
                        android:value="@color/colorAccent" />

                    <keyframe
                        android:fraction="0.7"
                        android:value="#000000" />

                    <keyframe
                        android:fraction="0.8"
                        android:value="@color/colorAccent" />

                    <keyframe
                        android:fraction="1.0"
                        android:value="#ffffff" />
                </propertyValuesHolder>
            </objectAnimator>
        </aapt:attr>
    </target>
</animated-vector>
